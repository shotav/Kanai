{
  "name": "kanai",
  "version": "0.1.0",
  "description": "A cross-platform code editor.",
  "keywords": [
    "cross-platform",
    "code-editor"
  ],
  "homepage": "https://github.com/PryosCode/Kanai",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "PryosCode",
    "email": "info@pryoscode.net",
    "url": "https://pryoscode.net"
  },
  "bugs": {
    "url": "https://github.com/PryosCode/Kanai/issues",
    "email": "info@pryoscode.net"
  },
  "main": "src/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/PryosCode/Kanai.git"
  },
  "build": {
    "appId": "net.pryoscode.kanai",
    "icon": "src/renderer/public/favicon.png",
    "productName": "Kanai Editor",
    "files": [
      "build/**/*",
      "src/main/**/*"
    ],
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "dev:bundle": "webpack serve --mode=development",
    "dev:open": "wait-on http://localhost:8080 && electron .",
    "dev": "concurrently -k \"yarn dev:bundle\" \"yarn dev:open\"",
    "build:bundle": "webpack --mode=production",
    "build:pack": "electron-builder",
    "build": "yarn build:bundle && yarn build:pack"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.0.0 <2"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.15.3",
    "@types/crypto-js": "^4.0.2",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-helmet": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "crypto-js": "^4.1.1",
    "css-loader": "^6.5.0",
    "cssnano": "^5.0.8",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^8.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-webpack-plugin": "^3.1.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "style-loader": "^3.3.1",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1"
  }
}