{
  "name": "kanai",
  "version": "0.4.0",
  "description": "A lightweight cross-platform code editor.",
  "keywords": [
    "lightweight",
    "cross-platform",
    "code-editor"
  ],
  "homepage": "https://github.com/PryosCode/Kanai",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "PryosCode",
    "email": "info@pryoscode.net",
    "url": "https://pryoscode.net"
  },
  "bugs": {
    "url": "https://github.com/PryosCode/Kanai/issues",
    "email": "info@pryoscode.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PryosCode/Kanai.git"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.0.0 <2"
  },
  "scripts": {
    "dev:serve": "webpack serve --mode=development",
    "dev:run:nix": "./Kanai &",
    "dev:run:windows": "start /b Kanai.exe",
    "dev:run": "fkill -s Kanai && run-script-os",
    "dev:watch": "wait-on http://localhost:8080 && cross-env MODE=development stack build --file-watch --fast --copy-bins --local-bin-path . --exec \"yarn dev:run\"",
    "dev": "concurrently \"yarn dev:serve\" \"yarn dev:watch\"",
    "build:bundle": "webpack --mode=production",
    "build:compile": "stack build --copy-bins --local-bin-path .",
    "build": "yarn build:bundle && yarn build:compile",
    "clean": "del .stack-work build elm-stuff node_modules Kanai kanai.cabal Kanai.exe"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "codemirror": "^5.63.3",
    "coffee-loader": "^3.0.0",
    "coffee-register": "^2.2.0",
    "coffeescript": "^2.6.1",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "css-loader": "^6.5.1",
    "cssnano": "^5.0.10",
    "del-cli": "^4.0.1",
    "elm": "^0.19.1-5",
    "elm-webpack-loader": "^8.0.0",
    "eslint": "^8.2.0",
    "eslint-plugin-coffeescript": "^1.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "fkill-cli": "^7.0.0",
    "html-webpack-plugin": "^5.5.0",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-styl": "^0.9.0",
    "pug": "^3.0.2",
    "pug-loader": "^2.4.0",
    "run-script-os": "^1.1.6",
    "style-loader": "^3.3.1",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-webpack-plugin": "^3.1.0",
    "stylus": "^0.55.0",
    "stylus-loader": "^6.2.0",
    "wait-on": "^6.0.0",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  }
}