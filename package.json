{
  "name": "kanai",
  "version": "0.1.0",
  "description": "A cross-platform text editor made with HTML, CSS and JS.",
  "keywords": [
    "css",
    "html",
    "js",
    "cross-platform",
    "text-editor"
  ],
  "homepage": "https://github.com/PryosCode/Kanai",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "PryosCode",
    "email": "info@pryoscode.net",
    "url": "https://pryoscode.net"
  },
  "bugs": {
    "url": "https://github.com/PryosCode/Kanai/issues",
    "email": "info@pryoscode.net"
  },
  "main": "src/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/PryosCode/Kanai.git"
  },
  "build": {
    "appId": "net.pryoscode.kanai",
    "icon": "public/favicon.png",
    "productName": "Kanai",
    "files": [
      "build/**/*",
      "src/main/**/*"
    ],
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "dev:bundle": "webpack serve --mode=development",
    "dev:open": "wait-on http://localhost:8080 && electron .",
    "dev": "concurrently -k \"yarn dev:bundle\" \"yarn dev:open\"",
    "build:bundle": "webpack --mode=production",
    "build:pack": "electron-builder",
    "build": "yarn build:bundle && yarn build:pack"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.0.0 <2"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/register": "^7.15.3",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.3.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.4.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^3.3.1",
    "wait-on": "^6.0.0",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1"
  }
}