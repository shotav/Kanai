{
  "name": "kanai",
  "version": "0.1.0",
  "description": "A cross-platform code editor.",
  "keywords": [
    "cross-platform",
    "code-editor"
  ],
  "homepage": "https://github.com/PryosCode/Kanai",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "PryosCode",
    "email": "info@pryoscode.net",
    "url": "https://pryoscode.net"
  },
  "bugs": {
    "url": "https://github.com/PryosCode/Kanai/issues",
    "email": "info@pryoscode.net"
  },
  "main": "build/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/PryosCode/Kanai.git"
  },
  "build": {
    "appId": "net.pryoscode.kanai",
    "icon": "assets/icon.png",
    "productName": "Kanai Editor",
    "files": [
      "build/**/*"
    ],
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "dev:lint": "watch \"eslint src/main/**/*\" src/main",
    "dev:transpile": "tsc -w --preserveWatchOutput",
    "dev:bundle": "webpack serve --mode=development",
    "dev:open": "wait-on http://localhost:8080 && electron .",
    "dev": "concurrently -k \"yarn dev:lint\" \"yarn dev:transpile\" \"yarn dev:bundle\" \"yarn dev:open\"",
    "build:lint": "eslint src/main/**/*",
    "build:transpile": "tsc",
    "build:bundle": "webpack --mode=production",
    "build:pack": "electron-builder",
    "build": "yarn build:lint && yarn build:transpile && yarn build:bundle && yarn build:pack"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.0.0 <2"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-serve": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@types/crypto-js": "^4.0.2",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-helmet": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "concurrently": "^6.3.0",
    "crypto-js": "^4.1.1",
    "css-loader": "^6.5.0",
    "cssnano": "^5.0.8",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "eslint": "^8.1.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-webpack-plugin": "^3.1.0",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.1",
    "highlight.js": "^11.3.1",
    "html-webpack-plugin": "^5.5.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "postcss-preset-env": "^6.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "rxjs": "^7.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0",
    "watch": "^1.0.2",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  }
}